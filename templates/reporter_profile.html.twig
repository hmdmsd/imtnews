<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reporter Profile</title>
    <!-- Add any additional styles or meta tags here -->
</head>
<body>
    <h1>Reporter Profile</h1>
    
    <h2>Articles by {{ reporter.getFirstName() }} {{ reporter.getLastName() }}</h2>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('reporter_article_detail', {'articleId': article.getId()}) }}">
                    <h3>{{ article.getTitle() }}</h3>
                </a>
            </li>
        {% endfor %}
    </ul>

    <!-- Add any additional content here -->
    <!-- Add Article Button -->
    <div>
        <a href="{{ path('add_article') }}" class="btn btn-primary">Add Article</a>
    </div>

    <!-- Add any additional content here -->
</body>
</html>

